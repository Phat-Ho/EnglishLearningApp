<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="480dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundPopup"
    android:layout_gravity="center"
    android:padding="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/popup_txt_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/popup_txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description"
                android:textSize="27sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/popup_meaning_txt_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Lịch sử tra từ"
                android:textSize="22sp"
                android:textColor="@color/levelTextColor"/>

            <ListView
                android:id="@+id/popup_lv_history"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_marginStart="10dp" />
            <TextView
                android:id="@+id/popup_meaning_txt_reminded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Lịch sử nhắc nhở"
                android:textSize="22sp"
                android:textColor="@color/levelTextColor" />
            <ListView
                android:id="@+id/popup_lv_reminder"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_marginStart="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/popup_btn_remember"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Đã nhớ"
                    android:textColor="@color/colorWhite"
                    app:strokeColor="@color/black"
                    android:layout_marginEnd="20dp"
                    style="@style/Widget.MaterialComponents.Button"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/popup_btn_not_remember"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Chưa nhớ"
                    android:backgroundTint="@color/colorRed"
                    android:textColor="@color/colorWhite"
                    app:strokeColor="@color/black"
                    android:layout_marginStart="20dp"
                    style="@style/Widget.MaterialComponents.Button"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</LinearLayout>
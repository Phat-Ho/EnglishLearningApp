<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/meaningContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingBottom="56dp"
    tools:context=".activity.MeaningActivity">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp">

        <ImageButton
            android:id="@+id/imageButtonPronounce"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_volume" />


        <com.like.LikeButton
            android:id="@+id/LikeButtonHeart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imageButtonPronounce"
            app:icon_type="heart" />

        <TextView
            android:id="@+id/textViewRemembered"
            android:text="Remembered"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/LikeButtonHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/checkBoxRemembered"
            android:layout_toRightOf="@id/LikeButtonHeart"
            android:layout_below="@id/textViewRemembered"
            android:layout_marginLeft="30dp"
            android:layout_width="50dp"
            android:layout_height="20dp"/>


        <ImageButton
            android:id="@+id/meaning_search_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_search" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/textViewMeaning"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hello_blank_fragment" />

    </ScrollView>


</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WelcomeActivity"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@drawable/main_background_gradient">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#E91E63"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:text="QUICK QUIZ"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="5dp"
        app:cardElevation="5dp"
        android:layout_marginHorizontal="10dp"
        android:padding="15dp"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                android:id="@+id/welcome_txt_quest_detail"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="26sp"
                android:text="Xin chào"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="5dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="25dp">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:orientation="vertical"
                    android:layout_weight="5">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/welcome_btn_1"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="Hello"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:cornerRadius="10dp"
                        app:strokeWidth="2dp" />

                    <TextView
                        android:id="@+id/welcome_txt_meaning_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Xin chào"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/welcome_btn_2"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="Nice"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        app:cornerRadius="10dp"
                        app:strokeWidth="2dp" />

                    <TextView
                        android:id="@+id/welcome_txt_meaning_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Đẹp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:visibility="invisible"
                        android:textAlignment="center"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="5">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/welcome_btn_3"
                        android:textSize="18sp"
                        android:textColor="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="What"
                        android:backgroundTint="@color/colorPrimary"
                        android:textStyle="bold"
                        app:strokeWidth="2dp"
                        app:cornerRadius="10dp"/>

                    <TextView
                        android:id="@+id/welcome_txt_meaning_3"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:text="Cái gì"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:textAlignment="center"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/welcome_btn_4"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="Hell"
                        android:textStyle="bold"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        app:cornerRadius="10dp"
                        app:strokeWidth="2dp" />

                    <TextView
                        android:id="@+id/welcome_txt_meaning_4"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:text="Địa ngục"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:textAlignment="center"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/welcome_btn_next"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Tiếp tục"
        android:backgroundTint="@color/colorBlue"
        android:visibility="invisible"/>


</LinearLayout>
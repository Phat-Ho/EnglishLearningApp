<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundPopup"
    android:layout_gravity="center"
    android:padding="15dp">

    <TextView
        android:id="@+id/popup_history_txt_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@color/black"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/custom_cancel_text"/>

    <TextView
        android:id="@+id/popup_history_txt_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/popup_history_txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Lịch sử tra từ"
        android:textSize="20sp"
        android:textColor="@color/levelTextColor"/>
    <ListView
        android:id="@+id/popup_history_lv_history"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"/>

</LinearLayout>